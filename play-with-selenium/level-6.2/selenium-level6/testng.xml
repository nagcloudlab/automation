<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="NPCI Level 6 Test Suite" verbose="1">
    
    <!-- Listeners for reporting -->
    <listeners>
        <listener class-name="com.npci.training.listeners.ExtentReportListener"/>
    </listeners>
    
    <!-- Parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="baseUrl" value="http://localhost:8000"/>
    
    <!-- Data Provider Tests -->
    <test name="Data Provider Tests">
        <classes>
            <class name="com.npci.training.level6.Test01_DataProviderCSV"/>
        </classes>
    </test>
    
    <!-- Custom Listeners Tests -->
    <test name="Custom Listeners & Reporting">
        <classes>
            <class name="com.npci.training.level6.Test02_CustomListeners"/>
        </classes>
    </test>
    
</suite>

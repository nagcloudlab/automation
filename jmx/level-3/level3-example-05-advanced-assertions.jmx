              <stringProp name="parameters"></stringProp>
              <stringProp name="script">// ========================================
// Custom Business Rule Validation
// ========================================

import groovy.json.JsonSlurper

// Get the response
def response = prev.getResponseDataAsString()

// Parse JSON
def jsonSlurper = new JsonSlurper()
def json = jsonSlurper.parseText(response)

// Business Rule 1: Check if success is true
if (!json.success) {
    AssertionResult.setFailure(true)
    AssertionResult.setFailureMessage(&quot;Payment not successful: &quot; + json.message)
    return
}

// Business Rule 2: Check if transaction ID has correct format
def txnId = json.data?.transactionId
if (!txnId || !txnId.startsWith(&quot;TXN&quot;)) {
    AssertionResult.setFailure(true)
    AssertionResult.setFailureMessage(&quot;Invalid transaction ID format: &quot; + txnId)
    return
}

// Business Rule 3: Check if amount is positive
def amount = json.data?.amount
if (!amount || amount &lt;= 0) {
    AssertionResult.setFailure(true)
    AssertionResult.setFailureMessage(&quot;Invalid amount: &quot; + amount)
    return
}

// Business Rule 4: Check if status is SUCCESS
def status = json.data?.status
if (status != &quot;SUCCESS&quot;) {
    AssertionResult.setFailure(true)
    AssertionResult.setFailureMessage(&quot;Payment status is not SUCCESS: &quot; + status)
    return
}

// All validations passed!
log.info(&quot;✅ All custom assertions PASSED&quot;)
log.info(&quot;Transaction ID: &quot; + txnId)
log.info(&quot;Amount: ₹&quot; + amount)
log.info(&quot;Status: &quot; + status)</stringProp>

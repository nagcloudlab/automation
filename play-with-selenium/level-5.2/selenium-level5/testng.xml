<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- 
    TestNG Suite Configuration
    
    This file controls how TestNG executes tests:
    - Which tests to run
    - In what order
    - Parallel execution
    - Test groups
    - Parameters
-->

<suite name="NPCI Selenium Test Suite" verbose="1">
    
    <!-- Suite-level parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="baseUrl" value="http://localhost:8000"/>
    
    <!-- Smoke Test Suite - Quick essential tests -->
    <test name="Smoke Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.npci.training.level5.Test01_TestNGAnnotations"/>
            <class name="com.npci.training.level5.Test02_TestNGGroups"/>
        </classes>
    </test>
    
    <!-- Critical Tests - Must-pass tests -->
    <test name="Critical Tests">
        <groups>
            <run>
                <include name="critical"/>
            </run>
        </groups>
        <classes>
            <class name="com.npci.training.level5.Test02_TestNGGroups"/>
        </classes>
    </test>
    
    <!-- Regression Suite - All tests -->
    <test name="Regression Tests">
        <classes>
            <class name="com.npci.training.level5.Test01_TestNGAnnotations"/>
            <class name="com.npci.training.level5.Test02_TestNGGroups"/>
        </classes>
    </test>
    
</suite>

<!--
    HOW TO USE:
    
    1. Run entire suite:
       mvn test
       
    2. Run specific test:
       mvn test -Dtest=Test01_TestNGAnnotations
       
    3. Run with groups:
       mvn test -Dgroups="smoke"
       mvn test -Dgroups="smoke,critical"
       
    4. Run specific suite file:
       mvn test -DsuiteXmlFile=testng-smoke.xml
       
    5. In IDE (IntelliJ/Eclipse):
       Right-click testng.xml → Run
       
    COMMON CONFIGURATIONS:
    
    • parallel="methods" - Run test methods in parallel
    • parallel="classes" - Run test classes in parallel
    • thread-count="3" - Use 3 threads
    • verbose="1" - Low verbosity (1-10)
    • preserve-order="true" - Maintain test order
-->
